<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Define Material Theme colors-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">?attr/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">?attr/colorAccent</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
    </style>

    <style name="AppTheme.DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Define Material Dark Theme colors-->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
        <item name="actionMenuTextColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
